<Manager>:
    id: screen_manager
    loginScreen:loginScreen
    createScreen:createScreen

    LoginLayout:
        id:loginScreen
        name: "loginPage"
        manager: screen_manager
    
    Creator:
        id:createScreen
        name: "createPage"
        manager: screen_manager

<LoginLayout>:
    key:key
    canvas.before:
    
        #Backgorund color
        Color:
            rgb : 1,1,1
        Rectangle:
            pos:self.pos
            size: self.size
        
        #Top design
        Color:
            rgb: 175/255,211/255,230/255
        RoundedRectangle:
            pos: 0,self.center_y
            size:self.width,self.center_y

    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height
        
        Label:
            text :"@SafeSoft"
            font_size: 40
            size_hint: 1,0.3
    
        Label:
            text:"Please insert your\n password to continue:"
            font_size: 20
            valign:"middle"
            size_hint: 1,0.5
            color: 0 , 0 , 0 , 1

        AnchorLayout:
            anchor_x: 'center'
            
            TextInput:
                id:key
                text:'text'
                multiline:False
                size_hint: .6,.1
                valign:"middle"
        
        Button:
            text:'Login'
            font_size: 30
            color: 0.7 , 0.8 , 0.4 , 1
            size_hint: 1,0.15
            on_press: root.obtainPass()

<Creator>:
    user:user
    site:site

            
    BoxLayout:
        orientation:'vertical'
        spacing: 5

        Label:
            text:'Generate Password'
            font_size: "30dp"
            size_hint: 1,.4

        BoxLayout:
            orientation: "vertical"
            GridLayout:
                rows:4
                cols:1
                row_force_default: True
                size_hint_y: None
                height: self.minimum_height
                width: self.minimum_width
                row_default_height: "35dp"
                row_default_width: "50dp"

                Label:
                    text:'Site'
                    font_size: "20dp"

                TextInput:
                    id:site
                    size_hint: .5,.1
                
                Label:
                    text:'Username'
                    font_size:"20dp"
                TextInput:
                    id:user
                    size_hint: .5,.1
            GridLayout:
                cols: 2
                size_hint:1,.2
                CheckBox:
                    on_active: root.checkbox_click()
                    size_hint_x: None
                    
    
                Label:
                    text: "Encripted"
                    font_size: 20
                    size_hint_x: None
                    width: 10
                
            Button:
                text:'Create'
                font_size: 25
                size_hint: 1,.2
                on_press: root.InsertPassword()
        

        